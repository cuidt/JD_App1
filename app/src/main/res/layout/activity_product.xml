<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.ProductActivity"
    >

  <android.support.v7.widget.Toolbar
        android:fitsSystemWindows="true"
        android:id="@+id/tool_head"
        android:layout_height="?android:actionBarSize"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/leftjiantou" />
            <EditText
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:background="@color/bg_gray"
                android:hint="都市丽人领劵满399减200"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/kind_grid"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_jingdong"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="京东配送"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_new_shop"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="新品"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_grade"
            android:layout_margin="10dp"
            android:text="品牌"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_caizhi"
            android:layout_margin="10dp"
            android:text="材质"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_kind"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

 </LinearLayout>
